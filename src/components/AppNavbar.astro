---
const links: { href: string; name: string }[] = [
  {
    href: '#',
    name: 'Sobre mí'
  },
  {
    href: '#',
    name: 'Servicios'
  },
  {
    href: '#',
    name: 'Productos'
  }
];

const currentPath = Astro.url.pathname;
---

<script>
  const mobileMenu = document.querySelector('#mobile-menu');
  const menuButton = document.querySelector('#menu-button');
  const closeMenuButton = document.querySelector('#close-menu-button');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  closeMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>

<header class="bg-transparent border-gray-200 mb-[150px] max-w-[1200px] mx-auto mt-10">
  <nav class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto max-xl:px-10">
    <div class="hidden w-full md:block md:w-auto" id="navbar-default">
      <ul
        class="font-medium flex flex-col max-xl:px-10 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50 md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 md:bg-white"
      >
        {
          links.map(({ href, name }) => (
            <li>
              <a href={href} class="py-2 px-3 text-primary text-lg hover:text-secondary">
                {name}
              </a>
            </li>
          ))
        }
      </ul>
    </div>

    <a href="https://flowbite.com/" class="max-lg:hidden">
      <button class="rounded-lg py-4 px-10 text-xl text-white bg-secondary">Reserva tu asesoría</button>
    </a>

    <button type="button" id="menu-button" class="lg:hidden">
      <svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
      </svg>
    </button>
  </nav>

  <!-- Mobile menu, show/hide based on menu open state. -->
  <div id="mobile-menu" class="hidden" role="dialog" aria-modal="true">
    <div class="fixed inset-y-0 right-0 z-20 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10">
      <div class="flex items-center justify-between justify-self-end">
        <button type="button" id="close-menu-button" class="-m-2.5 rounded-md p-2.5 text-gray-700">
          <span class="sr-only">Close menu</span>
          <svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <div class="mt-6 flow-root">
        <div class="-my-6 divide-y divide-gray-500/10">
          <div class="space-y-2 py-6 text-center">
            {
              links.map(({ href, name }) => (
                <div>
                  <a
                    href={href}
                    class:list={[
                      '-mx-3 block rounded-lg px-3 py-2 hover:bg-gray-50',
                      `${currentPath === `/${href}` ? 'bg-gray-300' : ''}`,
                      { 'font-bold': currentPath === `/$${href}` }
                    ]}
                  >
                    {name}
                  </a>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
